<%- include('partials/header') %>

<div class="text-center mb-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-2">Welcome to Bricothèque</h1>
    <p class="text-gray-600">Your community tool rental platform</p>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% tools.forEach(function(tool) { %>
        <div class="bg-white p-6 rounded-lg shadow-md">
            <h2 class="text-xl font-bold mb-2"><%= tool.name %></h2>
            <p class="text-gray-600 mb-4"><%= tool.description %></p>
            <p class="text-lg font-semibold mb-4">€<%= tool.daily_rate %>/day</p>
            <% if (tool.available) { %>
                <a href="/rent/<%= tool.id %>" 
                   class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
                    Rent Now
                </a>
            <% } else { %>
                <span class="bg-gray-300 text-gray-600 px-4 py-2 rounded">
                    Currently Rented
                </span>
            <% } %>
        </div>
    <% }); %>
</div>

<%- include('partials/footer') %>